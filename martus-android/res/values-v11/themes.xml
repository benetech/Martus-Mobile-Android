<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MartusTheme" parent="android:Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/MartusActionBar</item>
        <item name="android:actionBarStyle">@style/MartusActionBar</item>
        <item name="android:actionMenuTextColor">@color/button_text_white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="Widget.Button" parent="android:Widget">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/button_text_white</item>

    </style>

    <style name="MartusTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="MartusHeading1" parent="android:Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>