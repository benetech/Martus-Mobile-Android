<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MartusTheme" parent="Theme.Sherlock.Light">
        <item name="android:fontFamily">San-serif-light</item>
        <item name="actionBarStyle">@style/MartusActionBar</item>
        <item name="android:actionBarStyle">@style/MartusActionBar</item>
        <item name="android:actionMenuTextColor">@color/button_text_white</item>
    </style>

    <style name="Widget.Button" parent="android:Widget">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/button_text_white</item>
    </style>

    <style name="MartusTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="MartusHeading1" parent="android:Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="background">@color/top_bar_background_color</item>
    </style>

    <style name="PopupDialogStyle" parent="MartusTheme">
        <item name="android:windowTitleBackgroundStyle">@style/PopupDialogTitleBackgroundColor</item>
        <item name="android:background">@color/text_blue</item>
        <item name="android:textAppearance">@style/DialogTitle</item>
    </style>

    <style name="PopupDialogTitleBackgroundColor">
        <item name="android:background">@color/text_blue</item>
    </style>

    <style name="MartusActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/top_bar_background_color</item>
        <item name="android:titleTextStyle">@style/DialogTitle</item>
    </style>

</resources>